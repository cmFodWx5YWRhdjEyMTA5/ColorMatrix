<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/titilebar"
    android:background="@color/color_252525"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar">
    <ImageView
        android:id="@+id/loadimage"
        android:layout_weight="1"
        android:padding="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/ic_install_dark"
        android:layout_gravity="center"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/imagemore"
        android:padding="4dp"
        android:layout_toLeftOf="@+id/loadimage"
        android:visibility="visible"
        android:src="@mipmap/ic_shuffle_white"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/imagerotate"
        android:padding="3dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/imagemore"
        android:src="@mipmap/ic_refresh_dark"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/imagecrop"
        android:padding="5dp"
        android:visibility="gone"
        android:layout_toLeftOf="@+id/imagerotate"
        android:src="@mipmap/abc_ic_menu_cut_mtrl_alpha"
        android:layout_width="@dimen/dimens_40"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
     <TextView
         android:layout_marginLeft="65dp"
         android:id="@+id/tv_video"
         android:padding="5dp"
         android:text="娱 乐"
         android:layout_centerVertical="true"
         android:background="@drawable/shap_video_bg"
         android:textAllCaps="false"
         android:gravity="center"
         android:textSize="15sp"
         android:textStyle="normal"
         android:textColor="@color/color_30f209"
         android:layout_width="65dp"
         android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>