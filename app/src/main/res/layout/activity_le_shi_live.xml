<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.matrix.yukun.matrix.leshilive_module.LeShiLiveActivity">
    <RelativeLayout
        android:id="@+id/videoContainer"
        android:transitionName="share"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60">
        <ImageView
            android:padding="15dp"
            android:onClick="PlayBack"
            android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
            android:layout_width="@dimen/dimens_60"
            android:layout_height="match_parent" />
        <TextView
            android:text=""
            android:textColor="@color/color_whit"
            android:layout_width="90dp"
            android:gravity="center"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/text_change"
            android:text="切换直播间"
            android:textColor="@color/color_whit"
            android:layout_width="90dp"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <ImageView
        android:layout_margin="30dp"
        android:id="@+id/gift_big"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <com.matrix.yukun.matrix.selfview.GiftView
        android:id="@+id/gift"
        android:layout_marginBottom="@dimen/dimens_45"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dimens_50"
        android:layout_width="280dp"
        android:layout_height="350dp">
        <com.matrix.yukun.matrix.leshilive_module.giftview.GiftFrameLayout
            android:visibility="gone"
            android:id="@+id/gift_layout1"
            android:layout_width="250dp"
            android:layout_height="55dp" />
        <com.matrix.yukun.matrix.leshilive_module.giftview.GiftFrameLayout
            android:visibility="gone"
            android:id="@+id/gift_layout2"
            android:layout_width="250dp"
            android:layout_height="55dp" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:paddingLeft="10dp"
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="250dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="12"
        android:layout_height="@dimen/dimens_45">
        <EditText
            android:id="@+id/edit_chat"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:paddingRight="2dp"
            android:paddingLeft="5dp"
            android:hint="说点什么吧 !"
            android:singleLine="true"
            android:textSize="15sp"
            android:imeOptions="actionSend"
            android:background="@drawable/chat_edit"
            android:layout_weight="10"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:id="@+id/gift_list"
            android:src="@mipmap/gig_list"
            android:layout_weight="2"
            android:padding="8dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>

</RelativeLayout>
