<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="@dimen/dimens_20"
        android:layout_marginLeft="@dimen/dimens_10"
        android:text="对准面部后请点击确定"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <SurfaceView
        android:layout_margin="45dp"
        android:id="@+id/sv_camera"
        android:layout_width="match_parent"
        android:layout_height="320dp"/>
    <LinearLayout
        android:weightSum="2"
        android:layout_below="@+id/sv_camera"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_cancle"
            android:layout_width="0dp"
            android:text="取消"
            android:background="@color/color_8c8c8c"
            android:layout_marginLeft="@dimen/dimens_50"
            android:layout_weight="1"
            android:textColor="@color/color_ececec"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/bt_sure"
            android:layout_width="0dp"
            android:text="确定"
            android:layout_marginLeft="5dp"
            android:textColor="@color/color_44fc2c"
            android:background="@color/color_8c8c8c"
            android:layout_marginRight="@dimen/dimens_50"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</RelativeLayout>