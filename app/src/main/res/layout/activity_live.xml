<?xml version="1.0" encoding="utf-8"?>
<com.letv.recorder.controller.CameraSurfaceView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/camera_surface_view"
    android:layout_height="match_parent"
    tools:context="com.matrix.yukun.matrix.leshilive_module.LiveActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/color_82181818"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_60">
            <ImageView
                android:padding="15dp"
                android:onClick="LiveBack"
                android:src="@mipmap/abc_ic_ab_back_mtrl_am_alpha"
                android:layout_width="@dimen/dimens_60"
                android:layout_height="match_parent" />
            <TextView
                android:text="直播间"
                android:textColor="@color/color_whit"
                android:layout_width="90dp"
                android:gravity="center"
                android:textSize="22sp"
                android:layout_centerInParent="true"
                android:layout_height="match_parent" />
            <TextView
                android:text=""
                android:id="@+id/time"
                android:textColor="@color/color_whit"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <LinearLayout
            android:weightSum="5"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            android:layout_height="@dimen/dimens_60">
            <ImageButton
                android:id="@+id/open"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="#00000000"
                android:src="@drawable/letv_recorder_open"
                />
            <ImageButton
                android:id="@+id/change_flash"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:src="@drawable/letv_recorder_flash_light_close"
                />
            <ImageButton
                android:id="@+id/switch_camera"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:src="@drawable/letv_recorder_postposition_camera"
                android:layout_alignLeft="@id/change_flash"
                />
            <ImageButton
                android:id="@+id/switch_filter"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:src="@drawable/letv_recorder_postposition_filter"
                />
            <ImageButton
                android:id="@+id/set_volume"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:layout_alignParentBottom="true"
                android:src="@drawable/letv_recorder_voise_open"
                />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rea_cover"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:background="@color/color_back_all"
                android:layout_width="300dp"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="180dp">
                <TextView
                    android:text="该功能只供内部使用"
                    android:gravity="center_horizontal"
                    android:paddingBottom="20dp"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/edit_password"
                    android:hint="请输入密码:"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sure"
                    android:text="确  定"
                    android:padding="15dp"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>
    </RelativeLayout>
</com.letv.recorder.controller.CameraSurfaceView>
